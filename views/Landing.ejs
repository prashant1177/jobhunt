  <section class="hero w-100 hero-bg pt-5">
    <div
      class="container w-100 h-100 d-flex flex-column pt-5 align-items-center justify-content-between"
    >
      <div class="text-center w-50 mt-5 d-flex flex-column align-items-center">
        <h1 class="display-4 fw-bold text-white">
